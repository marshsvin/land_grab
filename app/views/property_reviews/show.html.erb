<div class="page-header">
  <h3>Property Review #<%= @property_review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Property review</dt>
      <dd><%= @property_review.property_review %></dd>

      <dt>Property</dt>
      <dd>
        <% if @property_review.property.present? %>
          <a href="/property_infos/<%= @property_review.property_id %>">
            <%= @property_review.property.landowner_id %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @property_review.user.present? %>
          <a href="/user_types/<%= @property_review.user_id %>">
            <%= @property_review.user.id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/property_reviews" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @property_review.user %>
        <a href="/property_reviews/<%= @property_review.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_property_review/<%= @property_review.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
