<div class="page-header">
  <h3>Property #<%= @property.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @property.landowner.present? %>
          <a href="/users/<%= @property.user_id %>">
            <%= @property.landowner.id %>
          </a>
        <% end %>
      </dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Zip code</dt>
      <dd><%= @property.zip_code %></dd>

      <dt>City</dt>
      <dd><%= @property.city %></dd>

      <dt>State</dt>
      <dd><%= @property.state %></dd>

      <dt>Acreage</dt>
      <dd><%= @property.acreage %></dd>

      <dt>Description</dt>
      <dd><%= @property.description %></dd>

      <dt>Property pictures</dt>
      <dd><img src="<%= @property.property_pictures %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/properties" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @property.landowner %>
        <a href="/properties/<%= @property.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_property/<%= @property.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Property has many property_bookings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Property Bookings
      </li>

      <% @property.property_bookings.each do |request| %>
        <li class="list-group-item">
          <a href="/requests/<%= request.id %>">
            <%= request.property_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/requests/<%= request.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for property_id -->
      <input type="hidden" name="property_id" value="<%= @property.id %>">

      <!-- Label and input for booking_start_date -->
      <div class="form-group">
        <label for="booking_start_date" class="control-label">
          Booking start date
        </label>

        <input type="text" id="booking_start_date" name="booking_start_date" placeholder="Booking start date" class="form-control" value="">
      </div>

      <!-- Label and input for booking_end_date -->
      <div class="form-group">
        <label for="booking_end_date" class="control-label">
          Booking end date
        </label>

        <input type="text" id="booking_end_date" name="booking_end_date" placeholder="Booking end date" class="form-control" value="">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :id), :class => "form-control") %>
      </div>

      <!-- Label and input for acceptance -->
      <div class="checkbox">
        <label for="acceptance">
          <input type="checkbox" id="acceptance" name="acceptance" value="1" <%= "checked" if @request.acceptance %>>
          Acceptance
        </label>
      </div>

      <!-- Label and input for user_review -->
      <div class="form-group">
        <label for="user_review" class="control-label">
          User review
        </label>

        <input type="text" id="user_review" name="user_review" placeholder="User review" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Request
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Property has many reviews -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Reviews
      </li>

      <% @property.reviews.each do |property_review| %>
        <li class="list-group-item">
          <a href="/property_reviews/<%= property_review.id %>">
            <%= property_review.property_review %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/property_reviews/<%= property_review.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/property_reviews/<%= property_review.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_property_review/<%= property_review.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_property_review" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for property_review -->
      <div class="form-group">
        <label for="property_review" class="control-label">
          Property review
        </label>

        <input type="text" id="property_review" name="property_review" placeholder="Property review" class="form-control" value="">
      </div>

      <!-- Label and input for property_id -->
      <input type="hidden" name="property_id" value="<%= @property.id %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-block btn-success">
        Create Property Review
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @property.address_latitude %>,
        "lng": <%= @property.address_longitude %>,
        "infowindow": "<h5><%= @property.created_at %></h5><small><%= @property.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>