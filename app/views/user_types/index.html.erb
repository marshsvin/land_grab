<div class="page-header">
  <h1>
    User types
    <a href="/user_types/new" class="btn btn-lg btn-success">New User type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>User type</th>
        <th>Actions</th>
      </tr>

      <% @user_types.each do |user_type| %>
      <tr>
        <td><%= user_type.email %></td>
        <td><%= user_type.password %></td>
        <td><%= user_type.user_type %></td>
        <td>
          <a href="/user_types/<%= user_type.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
