<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "requests_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :user_review_cont, "User review contains" %>
    <%= f.text_field :user_review_cont, :class => "form-control", :placeholder => "User review contains" %>
  </div>

<div class="form-group">
    <%= f.label :acceptance_eq, "Acceptance" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, "1", checked: ((params[:q] && params[:q][:acceptance_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, "0", checked: ((params[:q] && params[:q][:acceptance_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :acceptance_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :booking_end_date, "Booking end date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='booking_end_dategteqPicker'>
                  <%= f.text_field :booking_end_date_gteq, :class => "form-control", :placeholder => "Booking end date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='booking_end_datelteqPicker'>
                  <%= f.text_field :booking_end_date_lteq, :class => "form-control", :placeholder => "Booking end date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#booking_end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#booking_end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#booking_end_dategteqPicker').on("dp.change", function (e) {
                  $('#booking_end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#booking_end_datelteqPicker').on("dp.change", function (e) {
                  $('#booking_end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :booking_start_date, "Booking start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='booking_start_dategteqPicker'>
                  <%= f.text_field :booking_start_date_gteq, :class => "form-control", :placeholder => "Booking start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='booking_start_datelteqPicker'>
                  <%= f.text_field :booking_start_date_lteq, :class => "form-control", :placeholder => "Booking start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#booking_start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#booking_start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#booking_start_dategteqPicker').on("dp.change", function (e) {
                  $('#booking_start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#booking_start_datelteqPicker').on("dp.change", function (e) {
                  $('#booking_start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/requests" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#requests_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Booking start date</th>
        <th>Booking end date</th>
        <th>Requestors</th>
        <th>Acceptance</th>
        <th>User review</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <% if request.property.present? %>
            <a href="/properties/<%= request.property.id %>">
              <%= request.property.landowner_id %>
            </a>
          <% end %>
        </td>
        <td><%= request.booking_start_date %></td>
        <td><%= request.booking_end_date %></td>
        <td>
          <% if request.bookers.present? %>
            <a href="/users/<%= request.bookers.id %>">
              <%= request.bookers.id %>
            </a>
          <% end %>
        </td>
        <td><%= request.acceptance %></td>
        <td><%= request.user_review %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
