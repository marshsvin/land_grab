<div class="page-header">
  <h1>
    Property bookings
    <a href="/property_bookings/new" class="btn btn-lg btn-success">New Property booking</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Booking start date</th>
        <th>Booking end date</th>
        <th>Bookers</th>
        <th>Actions</th>
      </tr>

      <% @property_bookings.each do |property_booking| %>
      <tr>
        <td>
          <% if property_booking.property.present? %>
            <a href="/property_infos/<%= property_booking.property.id %>">
              <%= property_booking.property.landowner_id %>
            </a>
          <% end %>
        </td>
        <td><%= property_booking.booking_start_date %></td>
        <td><%= property_booking.booking_end_date %></td>
        <td>
          <% if property_booking.bookers.present? %>
            <a href="/user_types/<%= property_booking.bookers.id %>">
              <%= property_booking.bookers.id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/property_bookings/<%= property_booking.id %>" class="btn btn-primary">Show</a>
          <a href="/property_bookings/<%= property_booking.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_property_booking/<%= property_booking.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @property_bookings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
