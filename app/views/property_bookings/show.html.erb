<div class="page-header">
  <h3>Property Booking #<%= @property_booking.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Property</dt>
      <dd>
        <% if @property_booking.property.present? %>
          <a href="/property_infos/<%= @property_booking.property_id %>">
            <%= @property_booking.property.landowner_id %>
          </a>
        <% end %>
      </dd>

      <dt>Booking start date</dt>
      <dd><%= @property_booking.booking_start_date %></dd>

      <dt>Booking end date</dt>
      <dd><%= @property_booking.booking_end_date %></dd>

      <dt>Bookers</dt>
      <dd>
        <% if @property_booking.bookers.present? %>
          <a href="/user_types/<%= @property_booking.bookers_id %>">
            <%= @property_booking.bookers.id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/property_bookings" class="btn btn-primary">
        Back
      </a>
      <a href="/property_bookings/<%= @property_booking.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_property_booking/<%= @property_booking.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
